<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/puissance4_mdpi" >

    <TextView
        android:id="@+id/_textViewTextePartiesUnJoueur"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/texte_score_partie_un_joueur"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_textViewPartieGagnerIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texte_gagner"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/_textViewScoreGagnerIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texte_score_par_default"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_textViewPartiePerdreIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texte_perdre"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/_textViewScorePerdreIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texte_score_par_default"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/_textViewTextePartiesMultijoueurLocale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/texte_score_partie_multujoueur_locale"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_textViewPartieGagnerLocale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texte_gagner"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/_textViewScoreGagnerLocale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texte_score_par_default"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_textViewPartiePerdreLocale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texte_perdre"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/_textViewScorePerdreLocale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texte_score_par_default"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/_textViewTextePartiesMultijoueurBluetooth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/texte_score_partie_multijoueur_bluetooth"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="150dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_textViewPartieGagnerBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texte_gagner"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/_textViewScoreGagnerBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texte_score_par_default"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_textViewPartiePerdreBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texte_perdre"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/_textViewScorePerdreBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texte_score_par_default"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
